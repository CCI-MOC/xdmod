{
    "#": "Contains the start and end time for a specific set of vcpus and memory for a cloud host.",

    "table_definition": {
        "name": "cloud_resource_specs",
        "engine": "InnoDB",
        "comment": "Contains the start and end time for a specific set of vcpus and memory for a cloud host",
        "columns": [
            {
                "name": "host_id",
                "type": "int(11)",
                "nullable": false
            },
            {
                "name": "resource_id",
                "type": "int(11)",
                "nullable": false,
                "comment": "Unknown = -1 for global dimensions"
            },
            {
                "name": "memory_mb",
                "type": "int(11)",
                "nullable": false,
                "comment": "What to show the user"
            },
            {
                "name": "vcpus",
                "type": "int(5)",
                "nullable": false
            },
            {
                "name": "start_date_ts",
                "type": "int(12) unsigned",
                "nullable": false
            },
            {
                "name": "end_date_ts",
                "type": "int(12) unsigned",
                "nullable": true
            },
            {
                "name": "start_day_id",
                "type": "int(11) unsigned",
                "nullable": false
            },
            {
                "name": "end_day_id",
                "type": "int(11) unsigned",
                "nullable": true
            },
            {
                "name": "last_modified",
                "type": "timestamp",
                "nullable": false,
                "default": "CURRENT_TIMESTAMP",
                "extra": "on update CURRENT_TIMESTAMP"
            },
            {
                "name": "last_modified_ts",
                "type": "int(11) unsigned",
                "nullable": true
            }
        ],
        "indexes": [
            {
                "name": "PRIMARY",
                "columns": [
                    "resource_id",
                    "host_id",
                    "start_day_id"
                ],
                "is_unique": true
            },
            {
                "name": "last_modified_ts_idx",
                "columns": [
                    "last_modified_ts"
                ],
                "type": "BTREE",
                "is_unique": false
            }
        ],
        "triggers": [
            {
                "time": "BEFORE",
                "event": "INSERT",
                "table": "cloud_resource_specs",
                "body": "SET NEW.last_modified_ts = UNIX_TIMESTAMP(CURRENT_TIMESTAMP());",
                "schema": "modw_cloud",
                "name": "cloud_resource_specs_last_modified_ts_insert"
            },
            {
                "time": "BEFORE",
                "event": "UPDATE",
                "table": "cloud_resource_specs",
                "body": "SET NEW.last_modified_ts = UNIX_TIMESTAMP(CURRENT_TIMESTAMP());",
                "schema": "modw_cloud",
                "name": "cloud_resource_specs_last_modified_ts_update"
            }
        ]
    }
}
