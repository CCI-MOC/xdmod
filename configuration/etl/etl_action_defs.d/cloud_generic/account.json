{
    "#": "Load unique accounts into the dimension table. Do not load unknown accounts as these are",
    "#": "handled by a separate action",

    "table_definition": [
        {
            "$ref": "${table_definition_dir}/cloud_common/account.json#/table_definition"
        }
    ],

    "source_query": {
        "records": {
            "resource_id": "raw.resource_id",
            "provider_account": "raw.provider_account",
            "display": "raw.provider_account",
            "principalinvestigator_person_id": "COALESCE(p.person_id, -1)"
        },

        "joins": [
            {
                "name": "generic_cloud_raw_event",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "raw"
            },
            {
                "name": "resourcefact",
                "schema": "${UTILITY_SCHEMA}",
                "alias": "rf",
                "type": "LEFT",
                "on": "raw.resource_id = rf.id"
            },
            {
                "name": "staging_pi_to_project",
                "schema": "${SOURCE_SCHEMA}",
                "alias": "pi",
                "type": "LEFT",
                "on": "raw.project_name = pi.project_name AND rf.code = pi.resource_name"
            },
            {
                "name": "account",
                "schema": "${UTILITY_SCHEMA}",
                "alias": "a",
                "type": "LEFT",
                "on": "pi.pi_name = a.charge_number"
            },
            {
                "name": "principalinvestigator",
                "schema": "${UTILITY_SCHEMA}",
                "alias": "p",
                "type": "LEFT",
                "on": "a.id = p.request_id"
            }
        ],

        "where": [
            "provider_account IS NOT NULL"
        ],

        "groupby": [
            "resource_id",
            "provider_account"
        ]
    }
}
