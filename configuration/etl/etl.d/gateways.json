{
    "module": "gateways",
    "defaults": {
        "global": {
            "endpoints": {
                "source": {
                    "type": "mysql",
                    "name": "XDMoD Database",
                    "config": "database",
                    "schema": "modw",
                    "create_schema_if_not_exists": true
                },
                "destination": {
                    "type": "mysql",
                    "name": "XDMoD Database",
                    "config": "database",
                    "schema": "modw_gateways",
                    "create_schema_if_not_exists": true
                }
            }
        },
        "ingest": {
            "namespace": "ETL\\Ingestor",
            "class": "DatabaseIngestor",
            "options_class": "IngestorOptions"
        }
    },

    "#": "New job ingestion from HPCDB to XDMoD DataWarehouse (xdw)",
    "bootstrap": [
        {
            "name": "table-create",
            "description": "Setup tables",
            "class": "ManageTables",
            "namespace": "ETL\\Maintenance",
            "options_class": "MaintenanceOptions",
            "# order-matters": "Because of foreign key constraints",
            "definition_file_list": [
                "gateways/modw_gateways.gateway.json",
                "gateways/modw_gateways.enduser.json",
                "gateways/modw_gateways.job_metadata.json",
                "gateways/modw_gateways.jobfact_by_day_joblist.json",
                "gateways/modw_gateways.jobfact_by_day.json"
            ]
        }
    ],
    "ingest": [
	{
	    "name": "gateway",
	    "description": "Gateway information",
            "definition_file": "gateways/gateway.json"
	}
    ],
    "aggregate": [
        {
    	    "#": "Method from etl_pipelines.d/jobs-xdw.json",
            "name": "table-create",
            "description": "Setup tables",
            "class": "ManageTables",
            "namespace": "ETL\\Maintenance",
            "options_class": "MaintenanceOptions",
            "definition_file_list": [
                 "gateways/gatewayfact_by_day_joblist.json"
            ]
        },
        {
    	    "#": "Method from etl_pipelines.d/jobs-xdw.json: day",
            "name": "aggregate-days",
            "endpoints": {
                "source": {
                    "type": "mysql",
                    "name": "Job Record/Task database",
                    "config": "datawarehouse",
                    "schema": "modw"
                },
                "destination": {
                    "type": "mysql",
                    "name": "Aggregates Database",
                    "config": "datawarehouse",
                    "schema": "modw_gateways",
                    "create_schema_if_not_exists": true
                }
            },
            "namespace": "ETL\\Aggregator",
            "options_class": "AggregatorOptions",
            "class": "JobListAggregator",
            "description": "Aggregate HPC job records for gateways",
            "definition_file": "gateways/hpc-aggregation-day.json",
            "table_prefix": "gatewayfact_by_",
            "aggregation_units": ["day"]
        },
        {
    	    "#": "Method from etl_pipelines.d/jobs-xdw.json: other timeframes",
            "name": "aggregate",
            "endpoints": {
                "source": {
                    "type": "mysql",
                    "name": "Job Record/Task database",
                    "config": "datawarehouse",
                    "schema": "modw"
                },
                "destination": {
                    "type": "mysql",
                    "name": "Aggregates Database",
                    "config": "datawarehouse",
                    "schema": "modw_gateways",
                    "create_schema_if_not_exists": true
                }
            },
            "namespace": "ETL\\Aggregator",
            "options_class": "AggregatorOptions",
            "class": "SimpleAggregator",
            "description": "Aggregate Gateway job records",
            "definition_file": "gateways/hpc-aggregation.json",
            "table_prefix": "gatewayfact_by_",
            "aggregation_units": ["month", "quarter", "year"]
        },
        {
            "#": "Method from etl_pipelines.d/jobs-xdw.json: joblist",
            "name": "aggregation-joblist",
            "namespace": "ETL\\Ingestor",
            "class": "ExplodeTransformIngestor",
            "options_class": "IngestorOptions",
            "definition_file": "gateways/gatewayfact_by_day_joblist.json",
            "description": "Populate the job list table, which contains the back references from the aggregates table to the fact table",
            "explode_column": {
                "job_id_list": "job_id"
            },
            "endpoints": {
                "source": {
                    "type": "mysql",
                    "name": "modw_gateways",
                    "config": "datawarehouse",
                    "schema": "modw_gateways"
                }
            }
        }

    ]
}
