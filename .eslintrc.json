{
  "extends": "airbnb-base/legacy",
  "env": {
    "browser": false,
    "node": false
  },
  "globals": {},
  "rules": {
    "curly": [
      "error",
      "all"
    ],
    "block-scoped-var": "warn",
    "no-extra-parens": [
      "warn",
      "all"
    ],
    "dot-notation": [
      "warn",
      {
        "allowPattern": "^[a-z]+(_[a-z]+)+$"
      }
    ],
    "no-implicit-coercion": [
      "error",
      {
        "boolean": true,
        "number": true,
        "string": false
      }
    ],
    "consistent-this": [
      "warn",
      "self"
    ]
  }
}
